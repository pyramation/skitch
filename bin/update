#!/usr/bin/env bash

if [ -z "$1" ]
  then
    echo "please add a message"
    exit
fi



find . -name yarn.lock | grep -v node_modules | xargs rm
git add .
git commit -am "$1"
lerna publish
sleep 5

PACKAGE_VERSION=$(cat package.json \
  | grep version \
  | head -1 \
  | awk -F: '{ print $2 }' \
  | sed 's/[",]//g' \
  | tr -d '[[:space:]]')

echo $PACKAGE_VERSION

npm install -g skitch@$PACKAGE_VERSION
